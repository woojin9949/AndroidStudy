<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/sandwich">

        <ImageView
            android:id="@+id/main"
            android:layout_width="236dp"
            android:layout_height="38dp"
            android:src="@drawable/page_1"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="115dp"/>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/facebook_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:src="@drawable/logo_fb" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:background="#ffffff"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페이스북 계정으로 로그인"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/kakao_background"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:src="@drawable/logo_kt"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:background="#ffffff"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오 계정으로 로그인"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="7dp"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/arrows"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="회원가입 건너뛰고 레시피 확인하기"
                android:textColor="#BAB6B6"
                android:textSize="14dp"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/sandwich"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:scaleType="fitXY"
        android:src="@drawable/sandwich_bg_1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>