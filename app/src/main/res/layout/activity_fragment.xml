<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentActivity">
    <!--FragmentContainerView는 무조건 id를 설정 해야한다!! -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_first"
        android:name="com.example.fastcampusandroid.FragmentFirst"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:layout="@layout/first_fragment" />

    <TextView
        android:id="@+id/attach"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/facebook_background"
        android:gravity="center"
        android:text="attach"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/detach"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/facebook_background"
        android:gravity="center"
        android:text="detach"
        android:textSize="40dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/access_fragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="access fragment"
        android:textColor="@color/white"
        android:textSize="50dp" />

</androidx.appcompat.widget.LinearLayoutCompat>